<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name = "com.samadihadis.countryinformationapplication.intro.IntroFragment"
        android:label="IntroFragment">
        <action
            android:id="@+id/action_to_countriesListFragment"
            app:destination="@+id/countriesListFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/introFragment"/>
    </fragment>


    <fragment
        android:id="@+id/countriesListFragment"
        android:name = "com.samadihadis.countryinformationapplication.list.CountriesListFragment"
        android:label="CountriesListFragment">
        <action
            android:id="@+id/action_to_countriesDetailFragment"
            app:destination="@+id/countriesDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/countriesDetailFragment"
        android:name = "com.samadihadis.countryinformationapplication.detail.CountryDetailFragment"
        android:label="CountriesDetailFragment"/>

</navigation>